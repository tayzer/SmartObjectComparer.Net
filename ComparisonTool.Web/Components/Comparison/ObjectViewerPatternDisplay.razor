        <div class="alert alert-info">
            <small><strong>Debug:</strong> Found @HierarchicalGroups.Count groups: @string.Join(", ", HierarchicalGroups.Select(g => $"'{g.DisplayName}' ({g.DirectPatterns.Count})"))</small>
        </div>
        
